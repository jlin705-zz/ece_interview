<div>
<div class="media">
  <div class="media-body">
    <table class="table table-hover">
      <thead>
        <tr>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @companies.each do |company| %>
          <tr>
            <td><h1><%= link_to company.company, company %></h1></td>
            <td><%= link_to 'Edit', edit_company_path(company), class: 'btn btn-mini btn-success' %></td>
            <td><%= link_to 'Delete', company, method: :delete, class: 'btn btn-mini btn-danger',data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
</div>
<br>

<%= link_to 'New Company', new_company_path %>
</div>