<div class="row">
     <h1>ECE 面经分享</h1>
     <%= link_to 'New Company', new_company_path, class: 'btn btn-mini btn-primary'%>
<div class="pull-right range-query">

<%= form_tag companies_path, method: :get do %>
<%= text_field_tag :search, params[:search] %>
<%= submit_tag 'Search', :name => nil %>
<% end %>
</div>
</div>


<div class="media">
  <div class="media-body">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Time Added</th>
          <th>Company</th>
          <th></th>
          <th></th>
        </tr>
      </thead>

      <tbody>
        <% @companies.each do |company| %>
          
          <tr>
            <td><h3><%= company.created_at.strftime("%m/%d/%Y") %></h3></td>
            <td><h2><%= link_to company.company, company %></h2></td>
            <td><h2><%= link_to 'Edit', edit_company_path(company), class: 'btn btn-mini btn-success' %></h2></td>
            <td><h2><%= link_to 'Delete', company, method: :delete, class: 'btn btn-mini btn-danger',data: { confirm: 'Are you sure?' } %></h2></td>
          </tr>
        <% end %>
      </tbody>
    </table>
</div>
</div>
<br>

<%= link_to 'New Company', new_company_path, class: 'btn btn-mini btn-primary'%>
