<p id="notice"><%= notice %></p>
<h1>
  <%= @company.company %>
</h1>

<h3>Questions:</h3>

<div id='questions', class="container-fluid" >
<table class="table table-striped">
	<% @company.questions.each do |question| %>
	<%= div_for question do %>
	
	<ul>
		<h2><%= h(question.question)%></h2><br>
		Posted <%= time_ago_in_words(question.created_at) %>
	</ul>
		<%end%>
	<%end%>
	</table>
</div>


<%= form_for([@company, Question.new], remote: :true) do |f| %>
<p> <%= f.label :question, "New Interview Question" %><br />
	<%= f.text_area :question ,class: "form-control"%><br />
</p>
<p><%= f.submit "Add New Question",class: 'btn btn-mini btn-info' %>
</p>
<%end%>


<%= link_to 'Edit', edit_company_path(@company),class: 'btn btn-mini btn-primary' %> |
<%= link_to 'Back', companies_path, class: 'btn btn-mini btn-primary' %>
