<p id="notice"><%= notice %></p>

  <h3>Company:</h3>
<h1>
  <%= @company.company %>
</h1>

<h3>Questions:</h3>
<div id='questions' style="width:500px;margin: 0 auto;">
	<% @company.questions.each do |question| %>
	<%= div_for question do %>
	<p>
		<h2><%= h(question.question)%></h2><br>
		Posted <%= time_ago_in_words(question.created_at) %>
	</p>
		<%end%>
	<%end%>
</div>

<%= form_for([@company, Question.new], remote: :true) do |f| %>
<p> <%= f.label :question, "New Interview Question" %><br />
	<%= f.text_area :question %><br />
</p>
<p><%= f.submit "Add New Question" %>
</p>
<%end%>


<%= link_to 'Edit', edit_company_path(@company) %> |
